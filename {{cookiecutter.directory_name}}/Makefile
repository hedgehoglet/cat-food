activate:
	@echo "ğŸ¦” | $$(date "+%F %T") | Activating virtual environment..."
	@printf "ğŸ¦” | $$(date "+%F %T") | Invoking " 
	poetry shell

install: 
	@echo "ğŸ¦” | $$(date "+%F %T") | Installing dependencies..."
	@printf "ğŸ¦” | $$(date "+%F %T") | Invoking " 
	poetry install
	@echo ""
	@printf "ğŸ¦” | $$(date "+%F %T") | Invoking " 
	poetry run pre-commit install

init: 
	@echo "ğŸ¦” | $$(date "+%F %T") | Initializing git..."
	git config --global init.defaultBranch "main"
	git init

setup: init install
	@echo "ğŸ¦” | $$(date "+%F %T") | Opening {{cookiecutter.directory_name}} package..."